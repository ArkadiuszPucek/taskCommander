<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <!-- Sekwencja do generowania identyfikatorów ofert -->
    <changeSet id="1-create-offer-id-sequence" author="puccini">
        <createSequence sequenceName="offer_id_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <!-- Tabela Offer -->
    <changeSet id="2-create-offer-table" author="puccini">
        <createTable tableName="offer">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="offer_id" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="company_id" type="BIGINT"/>
            <column name="customer_id" type="BIGINT"/>
            <column name="offer_date" type="TIMESTAMP"/>
            <column name="order_completion_date" type="INTEGER"/>
            <column name="validity_term" type="INTEGER"/>
            <column name="delivery_method" type="VARCHAR(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="offer"
                                 baseColumnNames="company_id"
                                 constraintName="fk_offer_company"
                                 referencedTableName="company"
                                 referencedColumnNames="company_id"/>
        <addForeignKeyConstraint baseTableName="offer"
                                 baseColumnNames="customer_id"
                                 constraintName="fk_offer_customer"
                                 referencedTableName="customer"
                                 referencedColumnNames="customer_id"/>
    </changeSet>

    <!-- Tabela ComponentOffer -->
    <changeSet id="3-create-component-offer-table" author="puccini">
        <createTable tableName="component_offer">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="offer_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="component_offer"
                                 baseColumnNames="id"
                                 constraintName="fk_component_offer_offer"
                                 referencedTableName="offer"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- Tabela łącząca ComponentOffer i Components -->
    <changeSet id="4-create-component-offer-components-table" author="puccini">
        <createTable tableName="component_offer_components">
            <column name="component_offer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="component_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="component_offer_components"
                                 baseColumnNames="component_offer_id"
                                 constraintName="fk_component_offer_components_offer"
                                 referencedTableName="component_offer"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="component_offer_components"
                                 baseColumnNames="component_id"
                                 constraintName="fk_component_offer_components_component"
                                 referencedTableName="components"
                                 referencedColumnNames="component_id"/>
    </changeSet>

</databaseChangeLog>
